{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "SemanticClip": "Trace"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false
      }
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxRequestBodySizeInBytes": "30000000",
    "AllowedExtensions": ".mp4,.avi,.mov,.wmv,.mkv"
  },
  "AzureOpenAI": {
    "WhisperDeploymentName": "whisper",
    "ContentDeploymentName": "gpt-4o",
    "Endpoint": "https://your-dev-openai-endpoint.openai.azure.com/",
    "ApiKey": "your-dev-openai-api-key",
    "UseKeyVault": false
  },
  "FFmpeg": {
    "Path": "ffmpeg",
    "TimeoutMinutes": 5,
    "AudioSampleRate": 16000,
    "AudioChannels": 1
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5200",
      "https://localhost:7233"
    ]
  },
  "DetailedErrors": true
}
