{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "SemanticClip": "Trace"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false
      }
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxRequestBodySizeInBytes": "30000000",
    "AllowedExtensions": ".mp4,.avi,.mov,.wmv,.mkv"
  },
  "AzureOpenAI": {
    "WhisperDeploymentName": "whisper",
    "ContentDeploymentName": "gpt-4o",
    "Endpoint": "yourModelEndpoint",
    "ApiKey": "yourModelApiKey",
    "UseKeyVault": false
  },
  "LocalSLM": {
    "ModelId": "phi4-mini",
    "Endpoint": "http://localhost:11434"
  },
  "AzureAIAgent": {
    "ConnectionString" : "yourAIFoundryProjectConnectionString",
    "ChatModelId" : "gpt-4o",
    "BingConnectionId" : "",
    "VectorStoreId" : "semanticclipproject",
    "MaxEvaluations" : "3"
  },
  "FFmpeg": {
    "Path": "ffmpeg",
    "TimeoutMinutes": 5,
    "AudioSampleRate": 16000,
    "AudioChannels": 1
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5200",
      "https://localhost:7233"
    ]
  },
  "DetailedErrors": true
}
